.tab-list .news-list .news-list-item.none-image {
  line-height: 40rpx;
  position: relative;
  text-indent: 40rpx;
}
.tab-list .news-list .news-list-item.none-image::before {
  content: '';
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  color: #333;
  left: 20rpx;
  top: calc(50% - 5rpx);
  position: absolute;
  background-color: #333;
}
.tab-list .news-list .news-list-item.single-image {
  width: calc(100% - 40rpx);
  margin: 0 auto;
}
.tab-list .news-list .news-list-item.single-image .image {
