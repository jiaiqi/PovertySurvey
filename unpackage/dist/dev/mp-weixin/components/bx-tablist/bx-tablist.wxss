  -webkit-flex: 1;
          flex: 1;
  height: 160rpx;
}
.tab-list .news-list .news-list-item.single-image .content .title {
  font-weight: 600;
  height: auto;
  overflow: hidden;
}
.tab-list .news-list .news-list-item.single-image .content .text {
  width: 95%;
  max-height: 120rpx;
